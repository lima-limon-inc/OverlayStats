		<flag name="slider">Enable slider element</flag>
		<flag name="splitter">Enable splitter element</flag>
		<flag name="progress">Enable progress element (progress bar)</flag>
		<flag name="tree">Enable tree element</flag>
		<flag name="trayicon">Enable trayicon element</flag>
		<flag name="menubar">Enable menubar element</flag>
		<flag name="checkbox">Enable checkbox element</flag>
		<flag name="icon">Enable icon element</flag>
		<flag name="spinbox">Enable spinbox element</flag>
		<flag name="listbox">Enable listbox element</flag>
