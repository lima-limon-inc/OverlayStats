<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<maintainer type="person">
		<email>gentoo+bugs@flussence.eu</email>
		<name>flussence</name>
	</maintainer>
	<upstream>
		<bugs-to>https://redmine.audacious-media-player.org/projects/audacious/issues</bugs-to>
		<changelog>https://github.com/audacious-media-player/audacious-plugins/releases.atom</changelog>
		<remote-id type="github">audacious-media-player/audacious-plugins</remote-id>
	</upstream>
	<use>
		<flag name="adplug">Support MIDI playback using adplug FM synth emulation</flag>
		<flag name="ampache">Enable ampache server browser plugin</flag>
		<flag name="aosd">Enable On-Screen Display plugin</flag>
		<flag name="bs2b">Enable libbs2b stereophonic-to-binaural headphone filter</flag>
		<flag name="cue">Support CUE sheets using the libcue library</flag>
		<flag name="ffmpeg">Use <pkg>media-video/ffmpeg</pkg> to play audio from most files</flag>
		<flag name="fluidsynth">Support MIDI playback using Fluidsynth</flag>
		<flag name="gme">Enable GME plugin (bundled, not <pkg>media-libs/game-music-emu</pkg>!)</flag>
		<flag name="gtk3">Enables the Gtk+3 GUI. Must match the setting on <pkg>media-sound/audacious</pkg>.</flag>
		<flag name="http">Support HTTP streams through <pkg>net-libs/neon</pkg></flag>
		<flag name="hotkeys">Enable global hotkeys plugin</flag>
		<flag name="lame">Enable MP3 filewriter output plugin</flag>
		<flag name="libsamplerate">Enable <pkg>media-libs/libsamplerate</pkg> (resample, speed and pitch) plugins</flag>
		<flag name="moonstone">Enable the minimal Moonstone frontend (experimental)</flag>
		<flag name="mp3">Enable standalone MP3 plugin using <pkg>media-sound/mpg123</pkg></flag>
		<flag name="mpris2">Enable MPRIS2 support (dbus-based player remote control)</flag>
		<flag name="opengl">Enable the GL Spectrum visualiser</flag>
		<flag name="openmpt">Enable playing module tracker files through <pkg>media-libs/libopenmpt</pkg></flag>
		<flag name="pipewire">Enable PipeWire output plugin</flag>
		<flag name="qtmedia">Enable sound output via <pkg>dev-qt/qtmultimedia</pkg></flag>
		<flag name="scrobbler">Build with audioscrobbler/last.fm submission support</flag>
		<flag name="songchange">Enable the song change plugin</flag>
		<flag name="soxr">Enable <pkg>media-libs/soxr</pkg> (SoX Resampler) plugin</flag>
		<flag name="sndio">Enable <pkg>media-sound/sndio</pkg> output plugin</flag>
		<flag name="streamtuner">Enable streamtuner (internet radio browser) plugin</flag>
		<flag name="sid">Build with SID (Commodore 64 Audio) support</flag>
		<flag name="vumeter">Enable the VU Meter visualiser</flag>
		<flag name="xml">Enable support for XML-based playlists and APIs</flag>
	</use>
</pkgmetadata>
