+            [ "-package-env=-"
+            , "-hide-all-packages"
+            , "-no-user-package-db"
+            , "-package-db=" ++ prefix </> "dist/package.conf.inplace"
+            ]
+
+    let modules =
+            [ "src"
+            ]
+
+    doctest $ customFlags ++ pkgs ++ modules
